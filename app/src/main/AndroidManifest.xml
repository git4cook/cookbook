<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.groupd.cookbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.showRecipe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.showScroll"
            android:screenOrientation="portrait" />
        <activity
            android:name=".business.search"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.addNewRecipe"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.update" />
        <activity
            android:name=".presentation.searchResult"
            android:label="@string/title_activity_search_result"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>